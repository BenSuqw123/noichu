<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
    <script src="/socket.io/socket.io.js"></script> <!-- Đảm bảo socket.io-client được tải từ server -->
    <link rel="stylesheet" href="./css/styleHome.css">
    <script>
        var socket = io(); // Kết nối đến server socket

        socket.on('connect', function () {
            console.log('Đã kết nối tới server với id: ' + socket.id);
        });

        socket.on('disconnect', function () {
            console.log('Đã ngắt kết nối khỏi server');
        });

    </script>
</head>

